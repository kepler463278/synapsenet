# SynapseNet Configuration File
# Copy this file to config.toml and customize as needed

[node]
# Node name/identifier
name = "synapsenet-node"

# Data directory for storing grains, index, and keys
data_dir = ".synapsenet"

[p2p]
# Enable P2P networking
enabled = false

# P2P listen port
port = 9000

# Enable mDNS peer discovery on local network
mdns_enabled = true

# Bootstrap peer addresses (multiaddr format)
# Example: ["/ip4/192.168.1.100/tcp/9000/p2p/12D3KooW..."]
bootstrap_peers = []

[ai]
# ONNX model name (from HuggingFace)
model_name = "all-MiniLM-L6-v2"

# Embedding vector dimension
embedding_dim = 384

# Automatically download model if not present
auto_download = false

[storage]
# Database file name (relative to data_dir)
db_file = "synapsenet.db"

# HNSW index maximum elements
hnsw_max_elements = 1000000

# HNSW M parameter (connections per layer)
# Higher = better recall, more memory
hnsw_m = 16

# HNSW ef_construction parameter
# Higher = better index quality, slower build
hnsw_ef_construction = 200
